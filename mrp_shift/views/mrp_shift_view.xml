    <record id="open_view_shift_kanban" model="ir.actions.act_window">
        <field name="name">Shifts Overview</field>
        <field name="res_model">mrp.shift</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new manufacturing shift
            </p>
        </field>
    </record>

    <menuitem
        action="open_view_shift_kanban"
        id="menu_open_view_shift_kanban"
        parent="mrp.menu_mrp_root" sequence="0"
        name="Overview"/>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mrp_shift_view_kanban" model="ir.ui.view" >
        <field name="name">mrp.shift.kanban</field>
        <field name="model">mrp.shift</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard o_mrp_shift_kanban">
                <field name="count_session"/>
                <field name="count_session_draft"/>
                <field name="count_session_confirmed"/>
                <field name="count_session_produced"/>
                <field name="count_session_late"/>
                <field name="count_session_today"/>
                <templates>
                    <t t-name="kanban-box">
                        <div>
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <a type="object" name="action_view_sessions">
                                            <field name="name"/>
                                        </a>
                                    </div>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#"><i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/></a>
                                </div>
                            </div>
                            <div class="container o_kanban_card_content">
                                <div class="row">
                                    <div class="col-6 o_kanban_primary_left">
                                        <button class="btn btn-primary" name="action_view_session_today" type="object">
                                            <span><t t-esc="record.count_session_today.value"/> Planned For Today</span>
                                        </button>
                                        <button class="btn btn-secondary" name="%(mrp_shift.open_view_shift_session)d" type="action">New Session</button>
                                    </div>
                                    <div class="col-6 o_kanban_primary_right">
                                       <div t-if="record.count_session_draft.raw_value &gt; 0" class="row">
                                            <div class="col-9">
                                                <a name="action_view_session_draft" type="object">
                                                    To Confirm
                                                </a>
                                            </div>
                                            <div class="col-3">
                                                <field name="count_session_draft"/>
                                            </div>
                                        </div>
                                        <div t-if="record.count_session_confirmed.raw_value &gt; 0" class="row">
                                            <div class="col-9">
                                                <a name="action_view_session_confirmed" type="object">
                                                    To Produce
                                                </a>
                                            </div>
                                            <div class="col-3">
                                                <field name="count_session_confirmed"/>
                                            </div>
                                        </div>
                                        <div t-if="record.count_session_produced.raw_value &gt; 0" class="row">
                                            <div class="col-9">
                                                <a name="action_view_session_produced" type="object">
                                                    To Close
                                                </a>
                                            </div>
                                            <div class="col-3">
                                                <field name="count_session_produced"/>
                                            </div>
                                        </div>
                                        <div t-if="record.count_session_late.raw_value &gt; 0" class="row">
                                            <div class="col-9">
                                                <a name="action_view_session_late" type="object">
                                                    Late
                                                </a>
                                            </div>
                                            <div class="col-3">
                                                <field name="count_session_late"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="container o_kanban_card_manage_pane dropdown-menu" role="menu">
                                <div class="row">
                                    <div class="col-6 o_kanban_card_manage_section o_kanban_manage_view">
                                        <div role="menuitem" class="o_kanban_card_manage_title">
                                            <span>View</span>
                                        </div>
                                        <div role="menuitem">
                                            <a name="action_view_sessions" type="action">Sessions</a>
                                        </div>
                                        <div role="menuitem">
                                            <a name="action_view_orders" type="action">Manufacturing Orders</a>
                                        </div>
                                    </div>
                                    <div class="col-6 o_kanban_card_manage_section o_kanban_manage_new">
                                        <div role="menuitem" class="o_kanban_card_manage_title">
                                            <span>Reporting</span>
                                        </div>
                                        <div role="menuitem">
                                            <a name="841" type="action">By Orders</a>
                                        </div>
                                        <div role="menuitem">
                                            <a name="841" type="action">By Production Lines</a>
                                        </div>
                                    </div>
                                </div>
                                <div t-if="widget.editable" class="o_kanban_card_manage_settings row">
                                    <div role="menuitem" class="col-12">
                                        <a type="edit">Settings</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_shift_tree" model="ir.ui.view">
        <field name="name">mrp.shift.tree</field>
        <field name="model">mrp.shift</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Shifts">
                <field name="name" string="Shift"/>
                <field name="code"/>
                <field name="user_id"/>
                <field name="warehouse_id" groups="stock.group_stock_multi_warehouses"/>
            </tree>
        </field>
    </record>

    <record id="view_shift_form" model="ir.ui.view">
        <field name="name">mrp.shift.form</field>
        <field name="model">mrp.shift</field>
        <field name="arch" type="xml">
            <form string="Shift">
                <sheet>
                    <label for="name" class="oe_edit_only"/>
                    <h1><field name="name" class="oe_inline"/></h1>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="resource_calendar_id"/>
                            <field name="warehouse_id" groups="stock.group_stock_multi_warehouses" options="{'no_create': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Work Sessions">
                            <field name="session_ids" nolabel="1" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="production_date"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
		    </notebook>
                </sheet>
            </form>
        </field>
    </record>

